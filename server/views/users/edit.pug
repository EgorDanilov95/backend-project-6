extends ../layouts/application.pug

block header
  = t('views.users.edit.title')

block content
  .container
    .row.justify-content-center
      .col-md-6
        .card.shadow-sm.bg-white.bg-opacity-85
          .card-body.text-dark
            +formFor()(action=route('updateUser', {id: user.id}) method='post')
              input(name="_method" type="hidden" value="patch")
              +input(user, 'firstName', errors)(type ="text")
              +input(user, 'lastName', errors)(type = 'text')
              +input(user, 'email', errors)(type="text")
              +input(user, 'password', errors)(type="password")
              +submit(user)(value=t('views.users.edit.submit'))
              